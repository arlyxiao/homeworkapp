%p= link_to '作业列表', homeworks_path

.page-new
  = flash.now[:error]

= form_for @homework, :url => { :action => "create" }, :html => {:class => "assign_form"} do |f|
  %p 作业标题
  = f.text_field :title
  
  %p 作业内容
  = f.text_area :content, :size => "60x12"
  
  %p 隶属课程
  = f.select :course_id, @courses.collect {|item| [item.name, item.id]}
  
  %p 截止日期
  = f.text_field :deadline
  
  %p 选择分配学生
  .item
  -@students.each do |student|
    %input{:type=>'checkbox', :value => student.user_id, :name=>'homework[homework_assigns_attributes][][creator_id]'} #{student.real_name}
    
  %div
    作业提交物
    %p
      %input{:type=>'text', :size=>30, :name=>'homework[homework_student_attachements_attributes][][title]'}
    %p
      %input{:type=>'text', :size=>30, :name=>'homework[homework_student_attachements_attributes][][title]'}
  
  = f.submit "布置作业"
  
  
= form_for @homework, :url => { :action => "create" }, :html => { :multipart => true } do |form|
  = form.file_field :avatar
  

     
