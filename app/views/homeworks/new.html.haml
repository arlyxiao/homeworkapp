= form_for @homework, :url => { :action => "create" }, :html => {:class => "nifty_form"} do |f|
  = f.text_field :title
  = f.text_area :content, :size => "60x12"
  .item
    %input{:type=>'checkbox', :value => '222', :name=>'homework[homework_assigns_attributes][][creator_id]'}
  = f.submit "布置作业"
